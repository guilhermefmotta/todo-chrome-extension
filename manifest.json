{
  "manifest_version": 3,
  "name": "Todo List",
  "version": "1.0",
  "description": "A Simple and effective todo list",
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "style.css", "https://cdn.tailwindcss.com/your-tailwind-css-file.css"],
      "matches": ["*://*/*"]
    }
  ]
}
