{
  "manifest_version": 3,
  "name": "Your Extension",
  "version": "1.0",
  "description": "Description of your extension",
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "style.css", "https://cdn.tailwindcss.com/your-tailwind-css-file.css"],
      "matches": ["*://*/*"]
    }
  ]
}
